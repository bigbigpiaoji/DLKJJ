<template>
  <div class="sub-bubble"
       v-html="name"
       :style="getStyle">

  </div>
</template>

<script>
export default {
  name: 'sub-bubble',
  props: {
    name: {
      type: String,
      default: '百强企业<br/>碳排放',
    },
    delay: {
      type: [String, Number],
      default: 0,
    },
    duration: {
      type: [String, Number],
      default: 2,
    },
  },
  computed: {
    getStyle() {
      const { duration, delay } = this
      return {
        animation: `bubble ${duration}s linear ${delay}s infinite`,
      }
    },
  },
}
</script>

