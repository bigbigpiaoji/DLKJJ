<template>
  <div class="light-nav"
       :style="getBg">
    <div class="light-nav-icon"
         :style="getIcon"></div>
    <div class="light-nav-name">{{name}}</div>
  </div>
</template>

<script>
export default {
  name: 'light-nav',
  props: {
    name: {
      type: String,
      default: '',
    },
    type: {
      type: String,
      default: 'near',
    },
    icon: {
      type: String,
      default: `${CONFIG.imgUrl}/light-nav/icon.png`,
    },
  },
  computed: {
    getIcon() {
      return {
        backgroundImage: `url(${this.icon})`,
      }
    },
    getBg() {
      return {
        backgroundImage: `url(${CONFIG.imgUrl}/light-nav/${this.type}.png)`,
      }
    },
  },
}
</script>

